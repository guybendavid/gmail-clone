{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "ignoreDependencies": ["react-router"],
  "ignoreBinaries": ["vite"],
  "ignore": [
    "server/db/migrations/**",
    "server/db/raw-queries/**",
    "server/db/seeders/**",
    "server/utils/generate-image.ts",
    "eslint-plugins.d.ts"
  ],
  "workspaces": {
    "client": {
      "entry": ["src/index.tsx"]
    },
    "server": {
      "entry": ["app.ts"]
    },
    "tests": {
      "entry": ["**/*.test.ts"]
    }
  }
}
